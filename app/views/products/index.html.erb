<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Inventory</th>
      <th>Name</th>
      <th>Buy date</th>
      <th>Category</th>
      <th>Experation date</th>
      <th>Route</th>
      <th>Which user</th>
      <th>When update</th>
      <th>Create date</th>
      <th>Plaints sum</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.inventory %></td>
        <td><%= product.name %></td>
        <td><%= product.buy_date %></td>
        <td><%= product.category %></td>
        <td><%= product.experation_date %></td>
        <td><%= product.route_id %></td>
        <td><%= product.which_user %></td>
        <td><%= product.when_update %></td>
        <td><%= product.create_date %></td>
        <td><%= product.plaints_sum %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

